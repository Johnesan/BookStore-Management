<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookStore_Management.Views.AdminLogin">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="5,0,5,0">
            <Label Text="Login to the Admin Area" FontSize="22" HorizontalTextAlignment="Center" TextColor="SaddleBrown"/>
            <Label Text="UserName" HorizontalTextAlignment="Center"/>
            <Entry x:Name="UserName"/>
            <Label Text="Password" HorizontalTextAlignment="Center"/>
            <Entry x:Name="Password" IsPassword="True"/>
            <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="Chartreuse"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>